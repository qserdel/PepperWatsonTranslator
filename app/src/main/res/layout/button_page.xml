            android:layout_height="74dp" android:id="@+id/languageHeader" android:layout_weight="1"
            android:textSize="60sp"/>
    <Button
            android:text="English"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/englishButton" android:layout_weight="1"
            android:textSize="60sp" android:backgroundTint="#00E70A0A"/>

    <Button
            android:text="FranÃ§ais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/frenchButton" android:layout_weight="1"
            android:textSize="60sp"/>
