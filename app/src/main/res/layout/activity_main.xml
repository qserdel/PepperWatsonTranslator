<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="967dp"
            android:layout_height="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout">
        <TextView
                android:text="Input"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/input" android:textSize="80sp"
                android:textColorHighlight="#3F51B5"/>
    </LinearLayout>
    <TableLayout
            android:layout_width="961dp"
            android:layout_height="449dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/tableLayout">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
    </TableLayout>
    <TextView
            android:text="Language"
            android:layout_width="490dp"
            android:layout_height="82dp"
            android:id="@+id/languageView" android:textSize="40sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tableLayout" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/tableLayout" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Output"
            android:layout_width="893dp"
            android:layout_height="342dp"
            android:id="@+id/output"
            app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:textSize="80sp"
            app:layout_constraintVertical_bias="0.897" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/tableLayout"/>
</androidx.constraintlayout.widget.ConstraintLayout>